<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height = "match_parent"
    android:orientation="vertical"
    tools:context = ".MainActivity">


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/relative_layout_rounded"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/relative_layout_rounded"
            android:orientation = "vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:padding="10dp"
                android:textSize="35dp"
                android:layout_gravity="center"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layerType="software"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="7dp"
                    android:src="@drawable/line"
                    />

                    <CheckBox
                        android:id="@+id/check1"
                        android:layout_below="@+id/line1"

                        android:paddingLeft="7dp"
                        android:layout_marginLeft="55dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal"
                        android:layout_gravity="center"
                        android:button="@drawable/custom_checkbox"
                        android:checked="false"/>
                    <CheckBox
                        android:layout_below="@+id/line1"
                        android:layout_toRightOf="@+id/check1"
                        android:paddingLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company"
                        android:layout_gravity="center"
                        android:button="@drawable/custom_checkbox"
                        android:checked="true"/>

                <ImageView
                    android:layout_below="@+id/check1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layerType="software"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/line"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >
                
                <ImageView

                    android:id="@+id/imageView_emailIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/ic_email_black_24dp"
                    android:tint="@color/grey"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_emailIcon"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_emailIcon"
                    android:background="@color/darkgrey"
                    android:hint="Email"
                    android:paddingLeft="20dp"
                    android:textSize="15dp"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >

                <ImageView
                    android:id="@+id/imageView_userIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/ic_person_black_24dp"
                    android:tint="@color/grey"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_userIcon"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_userIcon"
                    android:background="@color/darkgrey"
                    android:hint="User"
                    android:paddingLeft="20dp"
                    android:textSize="15dp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >

                <ImageView
                    android:id="@+id/imageView_passIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/ic_lock_open_black_24dp"
                    android:tint="@color/grey"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_passIcon"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_passIcon"
                    android:background="@color/darkgrey"
                    android:hint="Password"
                    android:paddingLeft="20dp"
                    android:textSize="15dp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="50dp"
                >

                <CheckBox
                    android:id="@+id/check"
                    android:paddingLeft="12dp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:button="@drawable/custom_checkbox"
                    />
                <CheckBox
                    android:layout_toRightOf="@+id/check"
                    android:paddingLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/custom_checkbox"
                    android:text="Female"
                    android:layout_gravity="center"
                    android:checked="false"

                    />

                <Button
                    android:id="@+id/buton"

                    android:layout_below="@+id/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonround"
                    android:text="Register"

                    android:textColor="@color/grey"

                    />

                <TextView
                    android:layout_below="@+id/check"
                    android:layout_toRightOf="@id/buton"
                    android:paddingTop="10dp"
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link"
                    android:textSize="9dp"
                    />





            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>



</LinearLayout>